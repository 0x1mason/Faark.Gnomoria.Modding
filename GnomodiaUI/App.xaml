<Application x:Class="GnomodiaUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GnomodiaUI.Interface" Startup="Application_Startup">
    <Application.Resources>
        <!-- <DropShadowEffect x:Key="ButtonTextShadow1" Color="Black" Direction="315" BlurRadius="1" /> -->
        <Style x:Key="GnomeWindow" TargetType="Window">
            <!--
            <Setter Property="AllowsTransparency" Value="True"/>
            <Setter Property="WindowStyle" Value="None"/>
            <Setter Property="ResizeMode" Value="NoResize"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Window}">
                        <Grid>
                            <Label Content="WTF?!"/>
